<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Eat-Da-Burger!
      </h1>

    </div>
  </div>
</section>




<div class="columns">
  <div class="column">
    <h2>Burgers I want to eat!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{this.burger_name}}
        <button class="devour-burger" data-id="{{this.id}}">DEVOUR IT !</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="column">
    <h2>Burgers devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}
        <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

  <section class="section">
    <div class="container">

      <h2>Enter the burger you like !</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" name="burger_name">
        </div>

        <button type="submit">Submit</button>
      </form>
    </div>
  </section>